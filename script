CREATE TABLE DEPARTAMENTO 
(
  ID NUMBER,
  DEPARTAMENTO_DESCRIPCION VARCHAR2(255 BYTE) 
);

ALTER TABLE DEPARTAMENTO ADD CONSTRAINT "PK_DEPARTAMENTO_ID" PRIMARY KEY (ID);

CREATE TABLE MUNICIPIO 
(
 ID NUMBER,
 MUNICIPIO_DESCRIPCION VARCHAR2(255 BYTE) ,
 DEPARTAMENTO_ID NUMBER
);

ALTER TABLE MUNICIPIO ADD CONSTRAINT "PK_MUNICIPIO_ID" PRIMARY KEY (ID);
ALTER TABLE MUNICIPIO ADD CONSTRAINT "FK_DEPARTAMENTO_ID" FOREIGN KEY (DEPARTAMENTO_ID) REFERENCES DEPARTAMENTO(ID);

CREATE TABLE ESTADO_CIVIL
(
  ID NUMBER,
  ESTADO VARCHAR2(255 BYTE) 
);
ALTER TABLE ESTADO_CIVIL ADD CONSTRAINT "PK_ESTADO_CIVIL_ID" PRIMARY KEY (ID);


CREATE TABLE CLASE_EMPLEADO
(
  ID NUMBER,
  CLASE_EMPLEADO VARCHAR2(255 BYTE) 
);

ALTER TABLE CLASE_EMPLEADO ADD CONSTRAINT "PK_CLASE_EMPLEADO_ID" PRIMARY KEY (ID);

CREATE TABLE EMPLEADO
(
ID NUMBER,
SEXO VARCHAR2(255 BYTE),
PROFESION VARCHAR2(255 BYTE), 
ESCOLARIDAD VARCHAR2(255 BYTE),
ESTADO_CIVIL_ID NUMBER,
CLASE_EMPLEADO_ID NUMBER
);

ALTER TABLE EMPLEADO ADD CONSTRAINT "PK_EMPLEADO_ID" PRIMARY KEY (ID);
ALTER TABLE EMPLEADO ADD CONSTRAINT "FK_ESTADO_CIVIL_ID" FOREIGN KEY (ESTADO_CIVIL_ID) REFERENCES ESTADO_CIVIL(ID);
